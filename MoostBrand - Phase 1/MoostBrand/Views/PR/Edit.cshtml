            source: function (request, response) {
                $.ajax({
                    url: '@Url.Action("GetVendors")',
                    type: "POST",
                    dataType: "json",
                    data: { name: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                id: item.ID,
                                label: item.Name,
                                value: item.Name
                            };

                        }))

                    }
                })
            },
            select: function (event, ui) {
                $("#VendorID").val(ui.item.id);
            },
            messages: {
                noResults: "", results: ""
            },

        });
    })
</script>

