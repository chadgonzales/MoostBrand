                                @Html.DisplayFor(model => model.Employee3.FirstName)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Shipment Type</label>
                        <div class="col-md-8">
                            <label class="custom-label">
                                @Html.DisplayFor(model => model.ShipmentType)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Drop Ship Type</label>
                        <div class="col-md-8">
                            <label class="custom-label">
                                @Html.DisplayFor(model => model.DropShipType.Type)
                            </label>
                        </div>
                    </div>
                </div>

                <div id="br">
                    <div class="form-group">
                        <label class="control-label col-md-4">Destination</label>
                        <div class="col-md-8">
                            <label class="custom-label">
                                @Html.DisplayFor(model => model.Location.Description)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Plate Number</label>
                        <div class="col-md-8">
                            <label class="custom-label">
                                @Html.DisplayFor(model => model.PlateNumber)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Other</label>
                        <div class="col-md-8">
                            <label class="custom-label">
                                @Html.DisplayFor(model => model.Others)
