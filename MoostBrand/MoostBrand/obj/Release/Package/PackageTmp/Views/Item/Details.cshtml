            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Re Order Level</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.ReOrderLevel)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Minimum Stock</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.MinimumStock)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Maximum Stock</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.MaximumStock)
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <a href='@Url.Action("Edit", new { id = Model.ID })' class="btn btn-green">
                    Edit
                </a>
                <a href='@Url.Action("Index")' class="btn btn-light-orange">
                    Back to List
                </a>
            </div>
        </div>

    </div>
</div>
