@model PagedList.IPagedList<MoostBrand.Controllers.ReceivingController.ReqItems>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Available Items";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

<div class="panel-heading">
    <h4 class="panel-title">Available Items</h4>
    <hr />
</div>
<div class="panel-body">
    @*<div class="alert alert-danger">@TempData["PartialError"]</div>*@
    <table class="table table-striped table-bordered table-hover table-full-width dataTable no-footer">
        <thead>
            <tr>
                <th class="hidden"></th>
                <th>
                    Item Name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

           @foreach (var item in ViewBag.Items)
           {
            <tr class="item-row">
                <td style="display:none;"><label class="item-id">@item.ID</label></td>
                <td>@item.Description</td>
                <td>
                    <a href="#" class="btn btn-green add-item">Add Item</a>
                </td>
            </tr>
           }
                           
        </tbody>

    </table>

    <br />

    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount


    @Html.PagedListPager(Model, page => Url.Action("Details",
              new { page, id = ViewBag.Rid }))

    <br /><br />


  
</div>