                            @Html.DisplayFor(model => model.InventoryUoM)
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-4">InventoryStatus</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.InventoryStatus)
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-4">LocationCode</label>
