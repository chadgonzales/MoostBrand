                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-4">POSBarCode</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.POSBarCode)
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-4">Description</label>
                    <div class="col-md-8">
                        <label class="custom-label">
