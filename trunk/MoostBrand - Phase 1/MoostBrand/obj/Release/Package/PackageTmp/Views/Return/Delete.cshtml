@model MoostBrand.DAL.Return

@{
    ViewBag.Title = "Delete";
}
<div class="panel-heading">
    <h4 class="panel-title">Delete Return</h4>
    <hr />
</div>
<div class="panel-body">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Transaction Type</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.ReturnTransactionType.Type)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Return Type</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.ReturnType.Type)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Date</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Date)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Approved Status</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.ApprovalStatu.Status)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Approved By</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Employee.LastName),
                    @Html.DisplayFor(model => model.Employee.FirstName)
                </label>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            <div class="form-group">
                <div class="col-md-offset-2 col-md-6">
                    <input type="submit" value="Delete" class="btn btn-dark-red" />
                </div>
            </div>
        }

    </div>
</div>