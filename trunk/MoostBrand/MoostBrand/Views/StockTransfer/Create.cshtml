    function GetRq() {
        $(".preload").show();
        $.get("@Url.Action("GetRequisition", "StockTransfer")", null, function (data) {
            var markup = "<option value=''></option>";
            for (var x = 0; x < data.length; x++) {
                markup += "<option value=" + data[x].ID + ">" + data[x].RefNumber + "</option>";
            }
           
            $("#RequisitionID").html(markup).show();
            $(".preload").hide();
        });
    }

    function GetRc() {
        $(".preload").show();
        $.get("@Url.Action("GetReceiving", "StockTransfer")", null, function (data) {
            var markup = "<option value=''></option>";
            for (var x = 0; x < data.length; x++) {
                markup += "<option value=" + data[x].ID + ">" + data[x].ReceivingID + "</option>";
