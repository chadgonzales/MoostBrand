            }
            $("#ReservationID").html(markup).show();
            $(".preload").hide();
        });
    }
    function HideOrShow() {
        var val = $("#StockTransferTypeID").val();
        if (val == "") {
            $("#rc").hide();
            $("#rq").hide();
            $("#res").hide();
        } else if (val == 1) {
            $("#rc").hide();
            $("#res").hide();
            $("#rq").show();
            GetRq();
        } else if (val == 2) {
            $("#rc").show();
            $("#rq").hide();
            $("#res").hide();
            GetRc();
        } else if (val == 3) {
            $("#res").show();
            $("#rq").hide();
            $("#rc").hide();
            GetRes();
        }
        else {
            $("#rc").hide();
            $("#rq").hide();
            $("#res").hide();
        }
      
        //$(".ddl-item").select2({
        //    data: null
        //});
      
    }

    $("#StockTransferTypeID").change(function () {
