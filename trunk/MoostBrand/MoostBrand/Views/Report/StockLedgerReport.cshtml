@using ReportViewerForMvc

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/js/select2.min.js"></script>


@{
    ViewBag.Title = "StockLedgerReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel-heading">
    <h4 class="panel-title">Stock Ledger Report</h4>
</div>


<div class="panel-body">

    <div class="clearfix"></div>

    @using (Html.BeginForm())
    {
        <div class="form-horizontal" style="margin-bottom:16px;">

            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label col-md-3">Date From</label>
                    <div class="col-md-6">
                        <input type="text" name="DateFrom" class="date-picker form-control" value="@ViewBag.DateFrom" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label col-md-3">Date To</label>
                    <div class="col-md-6">
                        <input type="text" name="DateTo" class="date-picker form-control" value="@ViewBag.DateTo" />
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label col-md-3">Item Code</label>
                    <div class="col-md-6">
                        @Html.DropDownList("itemcode", (IEnumerable<SelectListItem>)ViewBag.ItemCode, "", new { @class = "form-control ddl-item" })
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label col-md-3">Item Description</label>
                    <div class="col-md-6">
                        @Html.DropDownList("itemdesc", (IEnumerable<SelectListItem>)ViewBag.ItemDesc, "", new { @class = "form-control ddl-item" })
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label col-md-3">Location</label>
                    <div class="col-md-6">
                        @Html.DropDownList("location", (IEnumerable<SelectListItem>)ViewBag.Location, "", new { @class = "form-control ddl-item" })
                    </div>
                </div>
            </div>

            

                <div class="col-md-6 no-padding">
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-dark-blue" style="margin-left:60%;" />
                    </div>
                </div>
          

            <div class="clearfix"></div>

        </div>
    }

    <!--#ReportViewer1-->
    <div class="report-viewer">
        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, new { @style = "border: none; width:100% !important;" })
    </div>

</div>

<script>
    $(document).ready(function () {
        $('.ddl-item').select2({
            data: null

        });
    });

</script>