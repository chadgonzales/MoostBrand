@model MoostBrand.DAL.Item

@{
    ViewBag.Title = "Delete";
}

<div class="panel-heading">
    <h4 class="panel-title">
        Delete Item
        <br /><small>Are you sure you want to delete this?</small>
    </h4>
    <hr />
</div>

<div class="panel-body">
    <div class="form-horizontal">

        <div class="form-group">
            <label class="control-label col-md-2">ItemID</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.ItemID)
                </label>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Code</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Code)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Barcode</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Barcode)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Description</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Description)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Category</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Category.Description)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Sub Category</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.SubCategory.Description)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Sub Category Types</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.SubCategoriesType.Description)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Brand</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Brand.Description)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Color</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Color.Description)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Size</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Size.Description)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Unit Of Measure</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.UnitOfMeasurement.Description)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Re Order Level</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.ReOrderLevel)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Minimum Stock</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.MinimumStock)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Maximum Stock</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.MaximumStock)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Lead Time</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.LeadTime)
                </label>
            </div>
        </div>

        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="col-md-offset-2 col-md-6">
                    <input type="submit" value="Delete" class="btn btn-red" />
                    <a href='@Url.Action("Index")' class="btn btn-light-orange">
                        Back to List
                    </a>

                </div>
            </div>
        }

         

    </div>
</div>
