@model MoostBrand.DAL.Employee

@{
    ViewBag.Title = "Edit";
}

@if (TempData["message"] != null)
{
    <h2>@TempData["message"]</h2>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="panel-heading">
        <h4 class="panel-title">Edit Employee</h4>
        <hr />

    </div>
    <div class="panel-body">

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger alert alert-danger" })
            @Html.EditorForModel()

            <div class="form-group">
                <div class="col-md-offset-2 col-md-6">
                    <input type="submit" value="Save" class="btn btn-green hidden" id="btnUpdate" hidden="hidden" />
                    <input type="button" value="Save" class="btn btn-green" id="btn_Update"/>

                    <a href='@Url.Action("Index")' class="btn btn-light-orange">
                        Back to List
                    </a>
                </div>
            </div>

        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>

    $(function () {
        $('#btn_Update').click(function () {

            alert('successfully save');
            $('#btnUpdate').click();

        });
    });

    $('#LastName').keyup(function () {
        var text = $(this).val();
        $(this).val(text.toUpperCase());
    });
    $('#FirstName').keyup(function () {
        var text = $(this).val();
        $(this).val(text.toUpperCase());
    });
    $('#Position').keyup(function () {
        var text = $(this).val();
        $(this).val(text.toUpperCase());
    });
</script>