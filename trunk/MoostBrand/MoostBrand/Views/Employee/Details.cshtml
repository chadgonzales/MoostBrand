@model MoostBrand.Models.UserAccessVM
@{
    ViewBag.Title = "Details";
}

<div class="panel-heading">
    <h4 class="panel-title">Employee Details</h4>
    <hr />
</div>

<div class="panel-body">
    <div class="form-horizontal">

        <div class="form-group">
            <label class="control-label col-md-2">@Html.DisplayNameFor(model => model.Employee.LastName)</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Employee.LastName)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">@Html.DisplayNameFor(model => model.Employee.FirstName)</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Employee.FirstName)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">@Html.DisplayNameFor(model => model.Employee.Position)</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Employee.Position)
                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <a href='@Url.Action("Edit", new { id = Model.Employee.ID })' class="btn btn-green">
                    Edit
                </a>
                <a href='@Url.Action("Index")' class="btn btn-light-orange">
                    Back to List
                </a>
            </div>
        </div>

    </div>
</div>
@using (Html.BeginForm())
{
    <table class="table table-striped table-bordered table-hover table-full-width dataTable no-footer">
        <thead>
            <tr>
                <th>
                    Module Name
                </th>
                <th>
                    View
                </th>
                <th>
                    Add/Edit
                </th>
                <th>
                    Delete
                </th>
                <th>
                    Request
                </th>
                <th>
                    Approve/Deny
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UserAccess)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Module.Name)
                    </td>
                    <td>
                        @Html.CheckBoxFor(modelItem => item.CanView)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CanEdit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CanDelete)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CanRequest)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CanDecide)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
            <input type="submit" value="Save" />
        </div>
    </div>
}