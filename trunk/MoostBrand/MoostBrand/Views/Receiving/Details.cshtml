<script language="javascript">
    $(function () {
        var val = $("#ReceivingTypeID").val();
        if (val == 1) { //PR
            $("#br").hide();
            $("#pr").show();
            $("#cr").hide();
        } else if (val == 2) { //BR
            $("#br").show();
            $("#pr").hide();
            $("#cr").hide();
        } else if (val == 3) { //WR
            $("#br").show();
            $("#pr").hide();
            $("#cr").hide();
            $("#brcr").show();
        } else if (val == 5) { //OR
            $("#br").show();
            $("#pr").hide();
            $("#cr").hide();
        } else if (val == 4) { //CR
            $("#br").hide();
            $("#pr").hide();
            $("#cr").show();
        } else {
            $("#br").hide();
            $("#pr").hide();
            $("#cr").hide();
        }
    });
</script>