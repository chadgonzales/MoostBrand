@model MoostBrand.DAL.StockTransfer

@{
    ViewBag.Title = "Details";
}

<div class="panel-heading">
    <h4 class="panel-title">Stock Transfer Details</h4>
    <hr />
</div>

<div class="panel-body">
    <div class="form-horizontal">


        <div class="row">

            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label col-md-4">Stock Transfer #</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.TransferID)
                        </label>
                    </div>
                </div>
                @*<div class="form-group">
                    <label class="control-label col-md-4">Requisition #</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.Requisition.RefNumber)
                        </label>
                    </div>
                </div>*@
                <div class="form-group">
                    <label class="control-label col-md-4">Date</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.STDAte)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Time Started</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.TimeStarted)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Time End</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.TimeFinish)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Driver</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.Driver)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Helper</label>
                    @foreach (var item in Model.Helpers)
                    {
                        <div class="col-md-8">
                            <label class="custom-label">
                                @Html.DisplayFor(modelItem => item.Name)
                            </label>
                        </div>
                    }
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Received By</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.Employee3.FirstName),
                            @Html.DisplayFor(model => model.Employee3.LastName)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Requested By</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.Employee5.FirstName),
                            @Html.DisplayFor(model => model.Employee5.LastName)
                        </label>
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label col-md-4">Released By</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.Employee4.FirstName),
                            @Html.DisplayFor(model => model.Employee4.LastName)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Operator</label>
                    @foreach (var item in Model.Operators)
            {
                        <div class="col-md-8">
                            <label class="custom-label">
                                @Html.DisplayFor(modelItem => item.Name)
                            </label>
                        </div>
                    }
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Checked By</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.Employee1.FirstName),
                            @Html.DisplayFor(model => model.Employee1.LastName)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Posted By</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.Employee2.FirstName),
                            @Html.DisplayFor(model => model.Employee2.LastName)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Encoded By</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.Employee6.FirstName),
                            @Html.DisplayFor(model => model.Employee6.LastName)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Approval Status</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.ApprovalStatu.Status)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Approved By</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.Employee.FirstName),
                            @Html.DisplayFor(model => model.Employee.LastName)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Remarks</label>
                    <div class="col-md-8">
                        <label class="custom-label">
                            @Html.DisplayFor(model => model.Remarks)
                        </label>
                    </div>
                </div>

            </div>
        </div>

        
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                @*@if (Convert.ToInt32(Session["sessionuid"]) == Model.RequestedBy || Convert.ToInt32(Session["usertype"]) == 1 || Convert.ToInt32(Session["usertype"]) == 4)
                {*@
                    @*<a href='@Url.Action("PendingItems", new { id = Model.ID })' class="btn btn-dark-yellow">
                        Pending Items
                    </a>*@
                    <a href='@Url.Action("ApprovedItems", new { id = Model.ID })' class="btn btn-dark-green">
                        Approved Items
                    </a>
                    <a href='@Url.Action("DeniedItems", new { id = Model.ID })' class="btn btn-dark-red">
                        Denied Items
                    </a>

                    <br /><br />

                    <a href='@Url.Action("Edit", new { id = Model.ID })' class="btn btn-green">
                        Edit
                    </a>
                @*}*@

                <a href='@Url.Action("Index")' class="btn btn-light-orange">
                    Back to List
                </a>
            </div>
        </div>

        @*@if (Convert.ToInt32(Session["sessionuid"]) == Model.RequestedBy || Convert.ToInt32(Session["usertype"]) == 1 || Convert.ToInt32(Session["usertype"]) == 4)
        {
          
            
        }*@
        @Html.Action("PendingItems", "StockTransfer", new { page = ViewBag.Page })
        <div class="panel-heading">
            <h4 class="panel-title">History</h4>
            <hr />
        </div>
        <table class="table table-striped table-bordered table-hover table-full-width dataTable ">
            <thead>
                <tr>
                    <th>
                        Item Code
                    </th>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        In Stock
                    </th>
                    <th>
                        Committed
                    </th>
                    <th>
                        Ordered
                    </th>
                    <th>
                        Available
                    </th>
                    <th>
                        Previous Item
                    </th>
                    <th>
                        Previous Quantity
                    </th>
                </tr>
            </thead>

            @foreach (var item in Model.StockTransferDetails)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReceivingDetail.RequisitionDetail.Item.Code)
                            @Html.DisplayFor(modelItem => item.RequisitionDetail.Item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReceivingDetail.RequisitionDetail.Item.Description)
                            @Html.DisplayFor(modelItem => item.RequisitionDetail.Item.DescriptionPurchase)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GetOrigInstock)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GetOrigCommited)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GetOrdered)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GetAvailable)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReceivingDetail1.RequisitionDetail.Item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PreviousQuantity)
                        </td>
                    </tr>
                </tbody>
            }
        </table>


    </div>
</div>

