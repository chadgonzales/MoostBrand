@model IEnumerable<MoostBrand.Models.Location >

@{
    ViewBag.Title = "List";
}

<a href="@Url.Action("LocationCreate")" >Create</a>

<table>
    <tr>
        <th>
            Location
        </th>
        <th>
            Location Type
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationType.Description)
            </td>
            <td>
                <ul>
                    <li>
                        <a href="@Url.Action("LocationEdit", new { id = item.ID })" >Edit</a>
                    </li>
                    <li>
                        <a href="@Url.Action("LocationDelete", new { id = item.ID })" >Delete</a>
                    </li>
                </ul>
            </td>
        </tr>
    }
</table>