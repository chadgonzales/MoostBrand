@model IEnumerable<MoostBrand.Models.Color>

@{
    ViewBag.Title = "ColorList";
}

<a href="@Url.Action("ColorCreate")" >Create</a>

<table>
    <tr>
        <th>
            Color
        </th>
        <th>
            Category
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Description)
            </td>
            <td>
                <ul>
                    <li>
                        <a href="@Url.Action("ColorEdit", new { id = item.ID })" >Edit</a>
                    </li>
                    <li>
                        <a href="@Url.Action("ColorDelete", new { id = item.ID })" >Delete</a>
                    </li>
                </ul>
            </td>
        </tr>
    }
</table>
